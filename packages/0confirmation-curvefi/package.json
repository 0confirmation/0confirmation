{
  "name": "@0confirmation/curvefi",
  "version": "1.0.7",
  "description": "for curvefi",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "vyper:install": "cross-env pip install -r vendor/requirements.txt",
    "task:build:migration": "truffle compile",
    "task:build:curvefi": "cross-env-shell 'python vendor/deploy-swap.vy > build/Curvefi.json'",
    "task:build:token": "cross-env-shell 'python vendor/deploy-token.vy > build/CurveToken.json'",
    "task:clean": "rimraf build/*",
    "build": "npm-run-all task:clean task:build:*",
    "deploy:ganache": "truffle migrate --network ganache",
    "launch:ganache": "ganache-cli",
    "deploy:kovan": "truffle migrate --network kovan"
  },
  "dependencies": {
    "@0confirmation/sdk": "^0.1.12",
    "bluebird": "^3.7.2",
    "cross-env": "^7.0.2",
    "ganache-cli": "^6.9.1",
    "glob": "^7.1.6",
    "mkdirp": "^1.0.4",
    "ncp": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "openzeppelin-solidity": "https://github.com/OpenZeppelin/openzeppelin-contracts#v3.0.0-rc.0",
    "rimraf": "^3.0.2",
    "truffle": "^5.1.22"
  }
}
