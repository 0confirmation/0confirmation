FROM python
RUN apt install -y git-core && mkdir /uniswap
WORKDIR /uniswap
RUN git clone https://github.com/Uniswap/contracts-vyper
WORKDIR /uniswap/contracts-vyper
RUN pip install -r requirements.txt
WORKDIR /uniswap/contracts-vyper/contracts
CMD ["vyper", "/uniswap/contracts/uniswap_exchange.vy"]
